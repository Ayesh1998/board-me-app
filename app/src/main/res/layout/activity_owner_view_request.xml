<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeForAll">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".OwnerViewRequest">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/request_from_stu_parent_name"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputfield"
        android:ems="10"
        android:hint="@string/request_deatails"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingBottom="120dp"
        android:textAlignment="textStart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAcceptRequest"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/button"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/accept"
            android:textColor="#E9D5D5"
            android:textSize="21sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDeleteRequest"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/button"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/delete"
            android:textColor="#E9D5D5"
            android:textSize="21sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

</LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navVieww"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/nav_lower_part"
        app:headerLayout="@layout/nav_header"
        app:itemTextColor="@color/nav_menu_color"

        app:menu="@menu/nav_menu_list">


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>