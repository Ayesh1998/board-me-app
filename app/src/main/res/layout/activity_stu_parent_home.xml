<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeForAll">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="115dp">

                <ImageView
                    android:id="@+id/stdProf_image"
                    android:layout_width="88dp"
                    android:layout_height="76dp"
                    android:layout_marginEnd="13dp"
                    android:contentDescription="@string/profilephoto"
                    android:src="@drawable/ic_account_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/stdProf_tvstudentFname"
                    app:layout_constraintHorizontal_bias="0.571"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/stdProf_tvstudentFname"
                    android:layout_width="228dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/textview"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/stduParentType"
                    android:layout_width="140dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="34dp"
                    android:textSize="18sp"
                    android:layout_marginEnd="121dp"
                    android:text="Stu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/stdProf_image"
                    app:layout_constraintTop_toBottomOf="@+id/stdProf_tvstudentFname" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/stdProf_email"
                android:layout_width="217dp"
                android:layout_height="28dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="24dp"
                android:text="@string/textview"

                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/stdProf_tvemail"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/stdProf_tele"
                android:layout_width="217dp"
                android:layout_height="28dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="24dp"
                android:text="@string/textview"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/stdProf_tvtele"
                app:layout_constraintTop_toBottomOf="@+id/stdProf_email" />

            <TextView
                android:id="@+id/stdProf_address"
                android:layout_width="217dp"
                android:layout_height="28dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="24dp"
                android:text="@string/textview"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/stdProf_tvaddress"
                app:layout_constraintTop_toBottomOf="@+id/stdProf_tele" />

            <TextView
                android:id="@+id/stdProf_tvtele"
                android:layout_width="136dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/telephone"
                android:textColor="@color/book_now_color"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stdProf_tvemail" />

            <TextView
                android:id="@+id/stdProf_tvemail"
                android:layout_width="136dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:text="@string/email"
                android:textColor="@color/book_now_color"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/stdProf_tvaddress"
                android:layout_width="136dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/address"
                android:textColor="@color/book_now_color"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stdProf_tvtele" />


            <Button
                android:id="@+id/stdbtn123"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/button"
                android:text="edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stdProf_tvaddress" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stu_par_bookigRecycle"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navVieww"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/nav_lower_part"
        app:headerLayout="@layout/nav_header"
        app:itemTextColor="@color/nav_menu_color"

        app:menu="@menu/nav_menu_list">


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>